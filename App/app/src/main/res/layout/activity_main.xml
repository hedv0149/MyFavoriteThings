<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.user.myfavoritethingsapp.MainActivity">



    <TextView
        android:id="@+id/myFaceTxt"
        android:layout_width="265dp"
        android:layout_height="124dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="11dp"
        android:fontFamily="cursive"
        android:text="If u want to know my favorite things press on me!"
        android:textAlignment="center"
        android:textColor="#6B2020"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myFace" />

    <ImageButton
        android:id="@+id/myFace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="154dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/butonn" />
</android.support.constraint.ConstraintLayout>
